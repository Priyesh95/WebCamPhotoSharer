<CameraScreen>:
    GridLayout:
        cols:1 
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            canvas.before:
                PushMatrix
                Rotate:
                    angle: -90
                    origin: self.center
            canvas.after:
                PopMatrix
            size_hint_y: 0.8
            
        Button:
            id: camera_button
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
            height: '48dp'
       
        Button:
            text: 'Capture'
            size_hint_y: 0.1
            height: '48dp'
            on_press : root.capture()

<RootWidget>:
    canvas.before:
        Color: 
            rgba: (1,1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

